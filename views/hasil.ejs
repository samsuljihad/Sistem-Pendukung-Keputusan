<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/hasil.css">
  <title>Penilaian</title>
</head>
<body>
  <div class="sidebar">
    <div class="sidebar-menu">
      <ion-icon name="desktop-outline"></ion-icon>
      <h2>Dashboard</h2>
    </div>
    <div class="icon-menu">
      <ion-icon name="person-circle-outline" class="alternatif"></ion-icon>
      <a href="/dashboard">Data Alternatif</a>
    </div>
    <div class="icon-menu">
      <ion-icon name="server-outline" class="kriteria"></ion-icon>
      <a href="/kriteria">Data Kriteria</a>
    </div>
    <div class="icon-menu">
      <ion-icon name="podium-outline" class="penilaian"></ion-icon>
      <a href="/penilaian">Data Penilaian</a>
    </div>
  </div>
  <div class="main-content">
    <div class="judul">
      <h1>Selamat Datang admin || <span style="color: #DD2F6E;">SMP NW KALIJAGA</span></h1>
      <div class="search-bar" style="position: relative;">
        <input type="text" placeholder="Cari..." style="padding-left: 50px;">
        <ion-icon name="search-outline" style="width: 40px; height: 30px; position: absolute; left: 10px; top: 5px;"></ion-icon>
      </div>
    </div>
    <div class="hasil-container">
      <h1>Daftar Penilaian</h1>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>NISN</th>
            <th>Nama</th>
            <th>Kelas</th>
            <th>Prestasi</th>
            <th>Jumlah Saudara</th>
            <th>Penghasilan Orang Tua</th>
            <th>Skor</th>
          </tr>
        </thead>
        <tbody>
          <% penilaian.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.nisn %></td>
              <td><%= item.nama %></td>
              <td><%= item.kelas %></td>
              <td><%= item.prestasi %></td>
              <td><%= item.jumlah_saudara %></td>
              <td><%= item.penghasilan_orang_tua %></td>
              <td><%= item.score %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <a href="/penilaian" class="back">Kembali</a>
  </div>

  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
